<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true" android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/lightGray" android:endColor="@color/lightGray"/>
            <stroke android:width="1dp" android:color="@color/lightGray"/>
        </shape>
    </item>
    <item android:state_focused="true" android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/white" android:endColor="@color/white"/>
            <stroke android:width="1dp" android:color="@color/lightGray"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="1dp">
            <gradient android:startColor="@color/white" android:endColor="@color/white"/>
            <stroke android:width="1dp" android:color="@color/lightGray"/>
        </shape>
    </item>
</selector>
