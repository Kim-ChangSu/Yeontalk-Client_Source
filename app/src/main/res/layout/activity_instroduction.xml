<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/layout_top_toolbar"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="자기 소개를 입력해 주세요. "/>
            <View android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_weight="1"/>
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Small" android:gravity="center" android:id="@+id/textview_num_introduction_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/linearlayout_introduction_id" android:background="@drawable/textviewstyle" android:padding="10dp" android:layout_width="match_parent" android:layout_height="120dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
            <EditText android:id="@+id/edittext_introduction_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxHeight="100dp" android:maxLength="60" android:inputType="none|text|textMultiLine|textUri|textEmailAddress|textEmailSubject|textPassword|textVisiblePassword|textWebEditText|textFilter"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
