<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/linearlayout_item_userslist_id"
    android:background="@drawable/selector_setting_background_no_stroke"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimageview_image_chat_room_item_id"
        android:paddingLeft="15dp"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_person_black_24dp"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1">

        <LinearLayout android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:textSize="16sp"
                android:textColor="@color/black"
                android:id="@+id/textview_nickname_chat_room_item_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="alala" android:layout_weight="1"/>

            <TextView
                android:gravity="end"
                android:id="@+id/textview_date_chat_room_item_id"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월 일"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:textSize="15sp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@+id/textview_last_chat_chat_room_item_id"
                android:paddingLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="alala"
                android:maxLines="1"
                android:layout_weight="1"/>

            <RelativeLayout
                android:id="@+id/relativeLayout_unshown_num_chat_room_item_id"
                android:paddingRight="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <ImageView
                    android:id="@+id/myImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_lens_black_24dp" />

                <TextView
                    android:id="@+id/textview_unshown_num_chat_room_item_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/myImageView"
                    android:layout_alignTop="@+id/myImageView"
                    android:layout_alignRight="@+id/myImageView"
                    android:layout_alignBottom="@+id/myImageView"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#ffffff" />
            </RelativeLayout>
            <!--<TextView-->
                <!--android:gravity="end"-->
                <!--android:id="@+id/textview_unshown_chat_room_item_id"-->
                <!--android:paddingRight="10dp"-->
                <!--android:background="@drawable/ic_lens_black_24dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="999"/>-->


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
