<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#000000</item>
        <item name="stTextSize">15sp</item>
        <item name="stColorBackground">#ffffff</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">1dp</item>
        <item name="stStrokeColor">#000000</item>
        <item name="stIconStart">@drawable/ic_info_outline_black_24dp</item>
        <item name="stLength">SHORT</item>
        LONG or SHORT
        <item name="stGravity">center</item>
        top or center
        <item name="stRadius">5dp</item>
    </style>

    <style name="CallActivityTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
    </style>



</resources>
